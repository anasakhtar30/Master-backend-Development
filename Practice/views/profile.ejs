<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
</head>

<body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
        <h5>You can create a new post</h5>

        <form action="/post" method="post">
            <textarea placeholder="What's on your mind ?"
                class=" block p-3 outline-none w-1/3 resize-none bg-transparent border-2 bg-zinc-800 rounded-md"
                name="content"></textarea>
            <input class="px-3 w-40 py-2 bg-blue-500 block rounded-md mt-2" type="submit" value="create new post">
        </form>
        <div class="posts mt-20">
            <h3 class="text-zinc-400">Your Posts.</h3>
            <div class="postcontainer mt-5">
                <% user.posts.forEach(function(post){ %>
                    <div class="post w-1/3 p-4 border-2 border-zinc-800">
                        <h4 class="text-blue-500"><%= user.username %></h4>
                        <p class="text-sm tracking-tight"><%= post.content %></p>
                        <div class="btns flex gap-4">
                            <a class="text-blue-500" href="/like/<%= post._id %>">
                               <%= post.likes.indexOf(user._id) == -1 ? 'Like' : 'Unlike'; %>
                            </a>
                            <a class="text-green-500" href="">Edit</a>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</body>

</html>